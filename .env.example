# Service selection: bot | worker | worker2
SERVICE_MODE=bot

# Bot configuration
BOT_PORT=3000
BOT_RATE_LIMIT=60
BOT_RATE_WINDOW_SEC=60
BOT_QUEUE_NAME=jobs:main
BOT_MAX_LOAD1=2.0

# Worker configuration
WORKER_QUEUE_NAME=jobs:main
WORKER_DEAD_LETTER_QUEUE=jobs:dead-letter
WORKER_MAX_ATTEMPTS=5
WORKER_IDEMPOTENCY_TTL_SEC=86400
WORKER_BACKOFF_BASE_MS=500

# Worker2 configuration
WORKER2_QUEUE_NAME=jobs:secondary
WORKER2_DEAD_LETTER_QUEUE=jobs:dead-letter
WORKER2_MAX_ATTEMPTS=5
WORKER2_IDEMPOTENCY_TTL_SEC=86400
WORKER2_BACKOFF_BASE_MS=500

# Health check
HEALTH_PORT=3001

# Redis (TLS required)
REDIS_HOST=redis.example.internal
REDIS_PORT=6380
REDIS_USERNAME=default
REDIS_PASSWORD=change_me
REDIS_CA_PATH=/etc/ssl/redis/ca.crt

# PostgreSQL (SSL required)
PG_HOST=postgres.example.internal
PG_PORT=5432
PG_USER=app_user
PG_PASSWORD=change_me
PG_DATABASE=app_db
PG_CA_PATH=/etc/ssl/postgres/ca.crt
PG_SSL_REJECT_UNAUTHORIZED=true
PG_POOL_MAX=10
